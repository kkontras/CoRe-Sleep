{
  "exp_name": "Sleep EEG-EOG BLIP Experiment",
  "agent": "Sleep_Agent_Init_Train",
  "mode": "train",
  "num_classes": 5,
  "training_params": {
    "cuda": true,
    "gpu_device": [0],
    "seed": 28,
    "batch_size": 16,
    "test_batch_size": 16,
    "data_loader_workers": 6,
    "pin_memory": true,
    "async_loading": true,
    "validation": true,
    "rec_test": false,
    "test_on_tops": true,
    "use_test_set": true,
    "verbose": true,
    "adversarial_training": {
      "use": false,
      "adv_epsilon": 0.01
    },
    "tdqm_disable": true,
    "wandb_disable": true,
    "res": true
  },
  "scheduler": {"type":"cosanneal", "max_lr": 0.03, "warm_up": 55},
  "optimizer": {
    "type": "Adam",
    "learning_rate": 0.0001,
    "momentum": 0.2,
    "weight_decay": 0.0001,
    "beta1": 0.9,
    "beta2": 0.999
  },
  "lr_finder": false,
  "lr_finder_steps": 100,
  "early_stopping": {
    "max_epoch": 1000,
    "log_interval": 10,
    "save_every": 1,
    "validate_every": 400,
    "validate_after": 0,
    "n_steps_stop": 1000,
    "n_steps_stop_after": 600
  },
  "dataset": {
      "dataloader_class": "SleepDataLoader_mat_huy",
      "cache_datasets": {"train": false, "valid": false, "test": false},
      "huy_data": true,
      "data_roots": "/esat/biomeddata/SHHS_Dataset/no_backup",
      "data_view_dir": [
        {"list_dir": "patient_mat_list.txt", "data_type": "stft", "mod":  "eeg", "num_ch": 1}
      ],
      "data_split": {
        "split_method": "patients_test",
        "val_split_rate": 0.026,
        "test_split_rate": 0.3
      },
      "seq_length": [ 21, 0 ],
      "shuffle_train": true,
      "seq_views": [ false ],
      "keep_view": [1, 0 ],
      "inner_overlap": [ 0.5,  0.5]
  },
  "post_proc": {
      "post_proc_step": 15,
      "test_postprocessing": false,
      "val_postprocessing": false
  },
  "num_modalities": 1,
  "channel": 0,
  "normalization": {
    "use": true,
    "calculate_metrics": false,
    "metrics_type": "train_dataset",
    "save_metrics": false,
    "dir": "/esat/biomeddata/SHHS_Dataset/no_backup/metrics_eeg_eog_emg_stft.pkl"
  },
  "model": {
    "model_class": "EEG_SLEEP_BLIP_GM_EEG",
    "args": {"dmodel": 128, "num_classes": 5, "fc_inner": 1024, "dropout": 0.3},
    "load_ongoing": false,
    "pretrained_model": {"dir": "", "use": false},
    "save_dir": "/esat/smcdata/users/kkontras/Image_Dataset/no_backup/data/2021_data/shhs1/multi_modal/paper_models/fourier_transformer_eeg_drop03_trial1_pt.pth.tar",
    "encoders": [
      {
        "model": "SleepEnc_EEG",
        "args": {"dmodel": 128, "dim_proj": 128, "dropout": 0.3, "dim_feedforward": 1024,  "rpos": true, "pos": false, "outer_biased": false, "inner_biased": false},
        "pretrainedEncoder": {"dir": "", "use": false},
        "savetrainedEncoder": {"dir": "","save": false},
        "freeze_encoder": false
      }
    ]
  },
  "augmentation": {},
  "plots": {"save": false,"plot_stft_num": 0},
  "statistics": {"print": false, "ce_weights": {"use": false,"temp": 0.1}}
}